{
  "plugins": ["react", "jsx-control-statements"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-control-statements/recommended"
  ],
  "rules": {
    "react/jsx-no-undef": [2, { "allowGlobals": true }],
    // "no-undef": [2, { "allowGlobals": true, "typeof": true }],
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "requireConfigFile": false
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "fetch": false,
    "Headers": false,
    "Request": false,
    "For": false,
    "document": false,
    "Blob": false,
    "window": false,
    "Set": false,
    "prompt": false,
    "navigator": false
  }
}
